<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_login_main"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/bold"
            android:textColor="@color/blackgray"
            android:textSize="40dp"
            android:text="안녕하세요!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/id_login"
            android:hint="ID"
            android:fontFamily="@font/regular"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/pw_login"
            android:inputType="textPassword"
            android:hint="PW"
            android:fontFamily="@font/regular"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/button_login"
                android:layout_weight="2"
                android:textSize="18dp"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:background="@drawable/radius_purple"
                android:text="로그인"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <!--<Button
                android:id="@+id/button_title_needhelp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textSize="20dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/purple_500"
                android:background="@android:color/transparent"
                android:text="Need Help?"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>-->

                <CheckBox
                    android:textSize="18dp"
                    android:buttonTint="@color/purple_500"
                    android:fontFamily="@font/regular"
                    android:text="로그인 유지"
                    android:id="@+id/check_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <!--<LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_login_main"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@drawable/facebook"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageButton
            android:layout_marginLeft="20dp"
            android:background="@drawable/google"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageButton
            android:layout_marginLeft="20dp"
            android:background="@drawable/instagram"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18dp"
            android:fontFamily="@font/regular"
            android:text="아직 회원이 아니세요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/button_title_join"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/purple_500"
            android:background="@android:color/transparent"
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>