<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/layout_afterlogin_mypage"
            android:visibility="visible"
            android:background="@color/lightgray"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/blackgray"
                    android:id="@+id/image_profile_mypage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="4"
                android:paddingRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:lineSpacingExtra="5dp"
                    android:id="@+id/text_nickname_mypage"
                    android:fontFamily="@font/regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_beforelogin_mypage"
            android:visibility="gone"
            android:background="@color/lightgray"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:text="우측 상단의 로그인 버튼을 눌러 로그인해 주세요"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/text_information_mypage"
                android:fontFamily="@font/regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/bell"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:text="시사회 시작전 알림 받기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Switch
                android:layout_gravity="center"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_color"
                android:layout_marginLeft="20dp"
                android:id="@+id/switch_alert_movie_mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/edit"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:text="정보수정"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/book"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:text="내 평가 모아보기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/information"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:text="버전정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/alert"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:text="공지사항"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/question"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:text="고객센터 / 도움말"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/button_logout_mypage"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/logout"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/red"
                android:fontFamily="@font/bold"
                android:text="로그아웃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>